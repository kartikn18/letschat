<!-- Online user count -->
<div id="onlineCount" style="
  margin-bottom: 10px;
  font-size: 14px;
  color: #555;
">
  ðŸ‘¥ 0 users online
</div>

  <!-- Send Form -->
  <form id="sendForm">
    <input 
      id="msg" 
      autocomplete="off" 
      placeholder="Type a message..." 
      maxlength="2000"
    />
    <input 
      type="file" 
      id="fileInput" 
      accept="image/jpeg,image/jpg,image/png,image/gif,image/webp" 
      style="display:none;" 
    />
    <button type="button" id="uploadBtn" title="Upload Image">ðŸ“Ž</button>
    <button type="submit">Send</button>
  </form>

  <!-- Pass data to JavaScript -->
  <script id="app-data" type="application/json">
    <%- JSON.stringify({
      user: {
        id: user?.id || null,
        username: user?.username || 'Unknown'
      },
      room: {
        id: room?.id || null,
        name: room?.room_name || 'Unknown'
      },
      socketUrl: socketUrl
    }) %>
  </script>

  <script src="/socket.io/socket.io.js"></script>
  <script src="/client.js"></script>
</body>
</html>