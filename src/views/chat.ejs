      padding: 15px;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
    #messages {
      height: 400px;
      overflow-y: auto;
      border: 1px solid #ddd;
      padding: 15px;
      background: white;
      border-radius: 8px;
      margin-bottom: 5px;
    }
    #typingIndicator {
      min-height: 20px;
      padding: 5px 10px;
      font-size: 13px;
      color: #666;
      font-style: italic;
      display: none;
      margin-bottom: 10px;
    }
    #sendForm {
      display: flex;
      gap: 8px;
      background: white;
      padding: 10px;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
    #msg {
      flex: 1;
      padding: 12px;
      border: 1px solid #ddd;
      border-radius: 5px;
      font-size: 14px;
    }
    #msg:focus {
      outline: none;
      border-color: #4CAF50;
    }
    button {
      padding: 12px 18px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 14px;
      font-weight: 500;
    }
    button[type="submit"] {
      background: #4CAF50;
      color: white;
      min-width: 80px;
    }
    button[type="submit"]:hover {
      background: #45a049;
    }
    #uploadBtn {
      background: #2196F3;
      color: white;
      font-size: 18px;
    }
    #uploadBtn:hover {
      background: #0b7dda;
    }
    #userList {
      margin-top: 15px;
      font-size: 13px;
      color: #555;
    }
    #userList strong {
      display: block;
      margin-bottom: 8px;
      color:#333;
}
</style>
</head>
