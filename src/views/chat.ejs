  <!-- Connection Status -->
  <div id="status" style="background: yellow; color: black;">
    ðŸ”„ Connecting...
  </div>

  <!-- Messages Area -->
  <div id="messages"></div>

  <!-- Typing Indicator -->
  <div id="typingIndicator"></div>
