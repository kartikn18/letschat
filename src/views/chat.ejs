<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Chat: <%= room.name %></title>
    <script src="/public/client.js"></script>
  </head>
  <body>
    <h1>Room: <%= room.name %></h1>
    <div id="messages" style="height:300px;overflow:auto;border:1px solid #ccc;padding:8px;"></div>
    <form id="sendForm">
      <input id="msg" autocomplete="off" /><button>Send</button>
    </form>

    <script>
      window.APP = {
        user: <%= JSON.stringify(user) %>,
        room: <%- JSON.stringify(room) %>,
        socketUrl: '<%= socketUrl %>'
      };
    </script>
  </body>
</html>