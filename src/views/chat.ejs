  <style>
* { margin: 0; padding: 0; box-sizing: border-box; }

body {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Arial, sans-serif;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: radial-gradient(circle at top, #1a1a2e, #000);
  color: #fff;
  overflow: hidden;
}

/* Header */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16px 25px;
  background: rgba(0,0,0,0.6);
  backdrop-filter: blur(14px);
  border-bottom: 1px solid rgba(255,255,255,0.15);
  flex-shrink: 0;
}

h1 {
  color: #b69cff;
  font-size: 22px;
  font-weight: 600;
}

.stats {
  display: flex;
  gap: 15px;
}

.stat-item {
  padding: 6px 14px;
  background: rgba(255,255,255,0.08);
  border: 1px solid rgba(255,255,255,0.15);
  border-radius: 20px;
  color: #fff;
  font-size: 13px;
  display: flex;
  align-items: center;
  gap: 5px;
}

/* Status bar */
#status {
  background: rgba(255,255,0,0.15);
  color: #ffeb3b;
  text-align: center;
  padding: 8px;
  font-size: 13px;
  flex-shrink: 0;
}

/* Layout */
.container {
  display: flex;
  flex: 1;
  overflow: hidden;
}

/* Main chat */
.main-chat {
  flex: 1;
  display: flex;
  flex-direction: column;
  background: rgba(0,0,0,0.4);
  backdrop-filter: blur(12px);
}

/* Messages */
#messages {
  flex: 1;
  overflow-y: auto;
  padding: 20px;
  display: flex;
  flex-direction: column;
  gap: 10px;
  scroll-behavior: smooth;
}

/* Chat bubbles */
.message {
  max-width: 70%;
  padding: 10px 14px;
  border-radius: 14px;
  word-wrap: break-word;
  font-size: 14px;
  line-height: 1.4;
}

.message.self {
  background: #8a6cff;
  color: #fff;
  align-self: flex-end;
  border-bottom-right-radius: 2px;
}

.message.other {
  background: rgba(255,255,255,0.08);
  color: #fff;
  align-self: flex-start;
  border-bottom-left-radius: 2px;
}

#typingIndicator {
  min-height: 20px;
  padding: 5px 20px;
  font-size: 12px;
  color: #aaa;
  font-style: italic;
  display: none;
}

/* Input form */
#sendForm {
  display: flex;
  gap: 10px;
  padding: 15px 20px;
  background: rgba(0,0,0,0.6);
  border-top: 1px solid rgba(255,255,255,0.15);
  flex-shrink: 0;
}

#msg {
  flex: 1;
  padding: 12px;
  border-radius: 12px;
  border: 1px solid rgba(255,255,255,0.2);
  background: rgba(255,255,255,0.08);
  color: #fff;
}

#msg::placeholder { color: #aaa; }

#msg:focus {
  outline: none;
  border-color: #b69cff;
  box-shadow: 0 0 0 3px rgba(182,156,255,0.3);
}

/* Buttons */
button {
  padding: 10px 16px;
  border-radius: 12px;
  border: none;
  cursor: pointer;
  font-weight: 600;
  transition: all 0.2s ease;
}

button[type="submit"] {
  background: linear-gradient(135deg, #b69cff, #8a6cff);
  color: #fff;
  box-shadow: 0 5px 20px rgba(138,108,255,0.5);
}

button[type="submit"]:hover {
  transform: translateY(-2px);
  box-shadow: 0 10px 30px rgba(138,108,255,0.8);
}

#uploadBtn {
  background: rgba(255,255,255,0.1);
  color: #fff;
  font-size: 16px;
}

#uploadBtn:hover {
  background: rgba(255,255,255,0.2);
}

/* Sidebar */
.sidebar {
  width: 260px;
  background: rgba(0,0,0,0.55);
  border-left: 1px solid rgba(255,255,255,0.15);
  padding: 20px;
  overflow-y: auto;
  flex-shrink: 0;
}

#userList {
  font-size: 13px;
  color: #ddd;
}

#userList strong {
  display: block;
  margin-bottom: 10px;
  color: #b69cff;
}

/* User items */
.user-item {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 6px 8px;
  border-radius: 8px;
  margin-bottom: 6px;
  background: rgba(255,255,255,0.05);
  transition: background 0.2s;
}

.user-item:hover {
  background: rgba(138,108,255,0.2);
}

/* Scrollbar */
#messages::-webkit-scrollbar {
  width: 6px;
}
#messages::-webkit-scrollbar-track {
  background: rgba(0,0,0,0.2);
}
#messages::-webkit-scrollbar-thumb {
  background: #8a6cff;
  border-radius: 3px;
}
</style>


