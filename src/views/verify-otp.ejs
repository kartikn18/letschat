<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
* { margin: 0; padding: 0; box-sizing: border-box; }

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
    background: radial-gradient(circle at top, #1a1a2e, #000);
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
    color: #fff;
}

.container {
    background: rgba(0,0,0,0.55);
    backdrop-filter: blur(14px);
    -webkit-backdrop-filter: blur(14px);
    border-radius: 16px;
    box-shadow: 0 20px 60px rgba(0,0,0,0.8);
    width: 100%;
    max-width: 420px;
    padding: 40px;
    border: 1px solid rgba(255,255,255,0.15);
}

.logo h1 {
    text-align: center;
    color: #b69cff;
    font-size: 28px;
    margin-bottom: 30px;
}

.form-title {
    text-align: center;
    color: #fff;
    font-size: 24px;
    margin-bottom: 10px;
}

.form-subtitle {
    text-align: center;
    color: #aaa;
    font-size: 14px;
    margin-bottom: 30px;
}

.form-group label {
    color: #ddd;
    font-weight: 500;
    margin-bottom: 8px;
    display: block;
}

.form-group input {
    width: 100%;
    padding: 12px 16px;
    border-radius: 10px;
    border: 1px solid rgba(255,255,255,0.2);
    background: rgba(255,255,255,0.08);
    color: #fff;
    font-size: 14px;
}

.form-group input::placeholder { color: #aaa; }

.form-group input:focus {
    outline: none;
    border-color: #8a6cff;
    box-shadow: 0 0 0 3px rgba(138,108,255,0.3);
}

.form-group input:read-only {
    background: rgba(255,255,255,0.05);
    cursor: not-allowed;
}

.btn {
    width: 100%;
    padding: 14px;
    background: linear-gradient(135deg, #b69cff, #8a6cff);
    color: #fff;
    border: none;
    border-radius: 10px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    box-shadow: 0 6px 20px rgba(138,108,255,0.5);
    transition: transform .2s ease, box-shadow .2s ease;
}

.btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(138,108,255,0.8);
}

.btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
}

.link-group {
    text-align: center;
    margin-top: 20px;
}

.link-group a {
    color: #b69cff;
    text-decoration: none;
}

.divider {
    margin: 15px 0;
    text-align: center;
    color: #777;
}

.alert-success {
    background: rgba(0,255,120,0.15);
    color: #6affb0;
    border: 1px solid rgba(0,255,120,0.3);
}

.alert-error {
    background: rgba(255,60,60,0.15);
    color: #ff7b7b;
    border: 1px solid rgba(255,60,60,0.3);
}

.loading {
    display: none;
    text-align: center;
    margin-top: 10px;
    color: #b69cff;
    font-size: 14px;
}
.loading.show { display: block; }
</style>

</head>
<body>
    <div class="container">
        <div class="logo">
            <h1>üí¨ SecureChat</h1>
        </div>
        
        <h2 class="form-title">Verify OTP</h2>
        <p class="form-subtitle">Enter the code sent to your email</p>

        <form id="verifyOTPForm">
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" required readonly>
            </div>

            <div class="form-group">
                <label for="otp">OTP Code</label>
                <input type="text" id="otp" name="otp" required placeholder="123456" maxlength="6" pattern="[0-9]{6}" autofocus>
            </div>

            <div class="form-group">
                <label for="newPassword">New Password</label>
                <input type="password" id="newPassword" name="newPassword" required placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" minlength="6">
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirm New Password</label>
                <input type="password" id="confirmPassword" name="confirmPassword" required placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" minlength="6">
            </div>

            <button type="submit" class="btn" id="submitBtn">Reset Password</button>
            <div class="loading" id="loading">‚è≥ Verifying...</div>
        </form>

        <div class="link-group">
            <a href="/forgot-password">‚Üê Resend OTP</a>
            <div class="divider">or</div>
            <a href="/login">‚Üê Back to Login</a>
        </div>
    </div>
    
    <script>
        console.log('‚úÖ Script loaded');
        
        // Pre-fill email from sessionStorage
        const email = sessionStorage.getItem('resetEmail');
        console.log('üìß Retrieved email:', email);
        
        if (email) {
            document.getElementById('email').value = email;
        } else {
            console.log('‚ö†Ô∏è No email found, redirecting to forgot-password');
            window.location.href = '/forgot-password';
        }

        const form = document.getElementById('verifyOTPForm');
        const newPassword = document.getElementById('newPassword');
        const confirmPassword = document.getElementById('confirmPassword');

        // Password confirmation validation
        confirmPassword.addEventListener('input', function() {
            if (newPassword.value !== confirmPassword.value) {
                confirmPassword.setCustomValidity('Passwords do not match');
            } else {
                confirmPassword.setCustomValidity('');
            }
        });

        // Form submission
        form.addEventListener('submit', async function(e) {
            e.preventDefault();
            console.log('üöÄ Form submitted');
            
            const submitBtn = document.getElementById('submitBtn');
            const loading = document.getElementById('loading');
            
            // Get form data
            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());
            
            console.log('üì¶ Form data:', {
                email: data.email,
                otp: data.otp,
                hasPassword: !!data.newPassword
            });
            
            // Disable button and show loading
            submitBtn.disabled = true;
            loading.classList.add('show');
            
            // Remove old alerts
            const oldAlert = form.querySelector('.alert');
            if (oldAlert) oldAlert.remove();
            
            try {
                console.log('üì§ Sending request to /api/auth/verifyOTP...');
                
                const response = await fetch('/api/auth/verifyOTP', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data),
                });
                
                console.log('üì• Response status:', response.status);
                
                const result = await response.json();
                console.log('üì¶ Result:', result);
                
                if (response.ok) {
                    console.log('‚úÖ Success!');
                    
                    const alert = document.createElement('div');
                    alert.className = 'alert alert-success';
                    alert.textContent = result.message || 'Password reset successful!';
                    form.insertBefore(alert, form.firstChild);
                    
                    // Clear sessionStorage
                    console.log('üóëÔ∏è Clearing sessionStorage');
                    sessionStorage.removeItem('resetEmail');
                    
                    console.log('üîÑ Redirecting to login...');
                    setTimeout(function() {
                        window.location.href = result.redirect || '/login';
                    }, 1500);
                } else {
                    console.error('‚ùå Error:', result.message);
                    
                    const alert = document.createElement('div');
                    alert.className = 'alert alert-error';
                    alert.textContent = result.message || 'Failed to reset password';
                    form.insertBefore(alert, form.firstChild);
                    
                    submitBtn.disabled = false;
                    loading.classList.remove('show');
                }
            } catch (error) {
                console.error('üí• Network error:', error);
                
                const alert = document.createElement('div');
                alert.className = 'alert alert-error';
                alert.textContent = 'Network error: ' + error.message;
                form.insertBefore(alert, form.firstChild);
                
                submitBtn.disabled = false;
                loading.classList.remove('show');
            }
        });
        
        console.log('‚úÖ Event listener attached');
    </script>
</body>
</html>