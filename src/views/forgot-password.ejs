<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
* { margin: 0; padding: 0; box-sizing: border-box; }

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
    background: radial-gradient(circle at top, #1a1a2e, #000);
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
    color: #fff;
}

.container {
    background: rgba(0,0,0,0.55);
    backdrop-filter: blur(14px);
    -webkit-backdrop-filter: blur(14px);
    border-radius: 16px;
    box-shadow: 0 20px 60px rgba(0,0,0,0.8);
    width: 100%;
    max-width: 420px;
    padding: 40px;
    border: 1px solid rgba(255,255,255,0.15);
}

.logo h1 {
    text-align: center;
    color: #b69cff;
    font-size: 28px;
    margin-bottom: 30px;
}

.form-title {
    text-align: center;
    color: #fff;
    font-size: 24px;
    margin-bottom: 10px;
}

.form-subtitle {
    text-align: center;
    color: #aaa;
    font-size: 14px;
    margin-bottom: 30px;
}

.form-group label {
    color: #ddd;
    font-weight: 500;
    margin-bottom: 8px;
    display: block;
}

.form-group input {
    width: 100%;
    padding: 12px 16px;
    border-radius: 10px;
    border: 1px solid rgba(255,255,255,0.2);
    background: rgba(255,255,255,0.08);
    color: #fff;
    font-size: 14px;
}

.form-group input::placeholder {
    color: #aaa;
}

.form-group input:focus {
    outline: none;
    border-color: #8a6cff;
    box-shadow: 0 0 0 3px rgba(138,108,255,0.3);
}

.btn {
    width: 100%;
    padding: 14px;
    background: linear-gradient(135deg, #b69cff, #8a6cff);
    color: #fff;
    border: none;
    border-radius: 10px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    box-shadow: 0 6px 20px rgba(138,108,255,0.5);
    transition: transform .2s ease, box-shadow .2s ease;
}

.btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(138,108,255,0.8);
}

.link-group a {
    color: #b69cff;
    text-decoration: none;
}

.link-group a:hover {
    text-decoration: underline;
}

.alert-success {
    background: rgba(0,255,120,0.15);
    color: #6affb0;
    border: 1px solid rgba(0,255,120,0.3);
}

.alert-error {
    background: rgba(255,60,60,0.15);
    color: #ff7b7b;
    border: 1px solid rgba(255,60,60,0.3);
}

.loading {
    display: none;
    text-align: center;
    margin-top: 10px;
    color: #b69cff;
}
.loading.show { display: block; }
</style>

</head>
<body>
    <div class="container">
        <div class="logo">
            <h1>üí¨ SecureChat</h1>
        </div>
        
        <h2 class="form-title">Forgot Password</h2>
        <p class="form-subtitle">Enter your email to receive an OTP</p>

        <form id="forgotPasswordForm">
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" required placeholder="you@example.com">
            </div>

            <button type="submit" class="btn">Send OTP</button>
            <div class="loading">Sending OTP...</div>
        </form>

        <div class="link-group">
            <a href="/login">Back to Login</a>
        </div>
    </div>
    
    <<script>
    document.getElementById('forgotPasswordForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const form = e.target;
        const submitBtn = form.querySelector('button[type="submit"]');
        const loading = form.querySelector('.loading');
        
        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());
        
        console.log('üìß Submitting forgot password for:', data.email);
        
        // Store email for verify-otp page
        sessionStorage.setItem('resetEmail', data.email);
        
        submitBtn.disabled = true;
        loading.classList.add('show');
        
        const oldAlert = form.querySelector('.alert');
        if (oldAlert) oldAlert.remove();
        
        try {
            console.log('üîÑ Sending request to /api/auth/forgetPassword...');
            
            const response = await fetch('/api/auth/forgetPassword', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data),
            });
            
            console.log('üì® Response status:', response.status);
            
            const result = await response.json();
            console.log('üì¶ Response data:', result);
            
            if (response.ok) {
                console.log('‚úÖ Success! Redirecting to:', result.redirect);
                
                const alert = document.createElement('div');
                alert.className = 'alert alert-success';
                alert.textContent = result.message || 'OTP sent successfully!';
                form.insertBefore(alert, form.firstChild);
                
                setTimeout(() => {
                    window.location.href = result.redirect || '/verify-otp';
                }, 1500); // Increased to 1.5s so user can see success message
            } else {
                console.error('‚ùå Error:', result.message);
                
                const alert = document.createElement('div');
                alert.className = 'alert alert-error';
                alert.textContent = result.message || 'Failed to send OTP';
                form.insertBefore(alert, form.firstChild);
                submitBtn.disabled = false;
            }
        } catch (error) {
            console.error('üí• Network error:', error);
            
            const alert = document.createElement('div');
            alert.className = 'alert alert-error';
            alert.textContent = 'Network error. Please try again.';
            form.insertBefore(alert, form.firstChild);
            submitBtn.disabled = false;
        } finally {
            loading.classList.remove('show');
        }
    });
</script>
</body>
</html>