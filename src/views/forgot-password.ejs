<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }
        
        .container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 420px;
            padding: 40px;
        }
        
        .logo {
            text-align: center;
            margin-bottom: 30px;
        }
        
        .logo h1 {
            color: #667eea;
            font-size: 28px;
            font-weight: 700;
        }
        
        .form-title {
            text-align: center;
            color: #333;
            font-size: 24px;
            margin-bottom: 10px;
        }
        
        .form-subtitle {
            text-align: center;
            color: #666;
            font-size: 14px;
            margin-bottom: 30px;
        }
        
        .form-group {
            margin-bottom: 20px;
        }
        
        .form-group label {
            display: block;
            color: #333;
            font-weight: 500;
            margin-bottom: 8px;
            font-size: 14px;
        }
        
        .form-group input {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 14px;
            transition: all 0.3s ease;
        }
        
        .form-group input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }
        
        .btn {
            width: 100%;
            padding: 14px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }
        
        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.4);
        }
        
        .btn:active {
            transform: translateY(0);
        }
        
        .btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none;
        }
        
        .link-group {
            text-align: center;
            margin-top: 20px;
        }
        
        .link-group a {
            color: #667eea;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
        }
        
        .link-group a:hover {
            text-decoration: underline;
        }
        
        .alert {
            padding: 12px 16px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 14px;
        }
        
        .alert-error {
            background-color: #fee;
            color: #c33;
            border: 1px solid #fcc;
        }
        
        .alert-success {
            background-color: #efe;
            color: #3c3;
            border: 1px solid #cfc;
        }
        
        .loading {
            display: none;
            text-align: center;
            margin-top: 10px;
            color: #667eea;
        }
        
        .loading.show {
            display: block;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="logo">
            <h1>üí¨ SecureChat</h1>
        </div>
        
        <h2 class="form-title">Forgot Password</h2>
        <p class="form-subtitle">Enter your email to receive an OTP</p>

        <form id="forgotPasswordForm">
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" required placeholder="you@example.com">
            </div>

            <button type="submit" class="btn">Send OTP</button>
            <div class="loading">Sending OTP...</div>
        </form>

        <div class="link-group">
            <a href="/login">Back to Login</a>
        </div>
    </div>
    
    <<script>
    document.getElementById('forgotPasswordForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const form = e.target;
        const submitBtn = form.querySelector('button[type="submit"]');
        const loading = form.querySelector('.loading');
        
        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());
        
        console.log('üìß Submitting forgot password for:', data.email);
        
        // Store email for verify-otp page
        sessionStorage.setItem('resetEmail', data.email);
        
        submitBtn.disabled = true;
        loading.classList.add('show');
        
        const oldAlert = form.querySelector('.alert');
        if (oldAlert) oldAlert.remove();
        
        try {
            console.log('üîÑ Sending request to /api/auth/forgetPassword...');
            
            const response = await fetch('/api/auth/forgetPassword', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(data),
            });
            
            console.log('üì® Response status:', response.status);
            
            const result = await response.json();
            console.log('üì¶ Response data:', result);
            
            if (response.ok) {
                console.log('‚úÖ Success! Redirecting to:', result.redirect);
                
                const alert = document.createElement('div');
                alert.className = 'alert alert-success';
                alert.textContent = result.message || 'OTP sent successfully!';
                form.insertBefore(alert, form.firstChild);
                
                setTimeout(() => {
                    window.location.href = result.redirect || '/verify-otp';
                }, 1500); // Increased to 1.5s so user can see success message
            } else {
                console.error('‚ùå Error:', result.message);
                
                const alert = document.createElement('div');
                alert.className = 'alert alert-error';
                alert.textContent = result.message || 'Failed to send OTP';
                form.insertBefore(alert, form.firstChild);
                submitBtn.disabled = false;
            }
        } catch (error) {
            console.error('üí• Network error:', error);
            
            const alert = document.createElement('div');
            alert.className = 'alert alert-error';
            alert.textContent = 'Network error. Please try again.';
            form.insertBefore(alert, form.firstChild);
            submitBtn.disabled = false;
        } finally {
            loading.classList.remove('show');
        }
    });
</script>
</body>
</html>